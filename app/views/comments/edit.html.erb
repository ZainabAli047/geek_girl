<h1>Editing Comment</h1>

<%= form_for :comment ,:url => comment_path(@comment), method: :put do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>